@model IEnumerable<SlideX.Models.Presentation>
@{
    ViewBag.Title = "Search pesentions by user's name";
}
<h2>
    Search presention by user's name
</h2>

@if (Model != null)
{  
     <table class="table">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Options
                </th>
            </tr>
             @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <code>@Html.DisplayFor(modelItem => item.Title)</code>
                    </td>
                    <td>
                        <blockquote>
                            @Html.DisplayFor(modelItem => item.Description)
                        </blockquote>
                    </td>
                    <td>
                        <a class="btn btn-success" href="@Url.Action("Preview", "UserPresentation", new { id = item.Id })" target = "_blank" >
                            View</a>  <a class="btn btn-info" href="@Url.Action("Details", "UserPresentation", new { id = item.Id })">
                                        Details</a> 
                    </td>
                </tr>
            }
        </table>
}